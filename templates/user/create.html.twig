{% extends 'base.html.twig' %}

{% block header_title %}<h1>Créer un utilisateur</h1>{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
    <div class="row userForm">
        {{ form_start(form, {'action' : path('user_create')}) }}
        {{ form_widget(form) }}

        <button type="submit" class="btn btn-success pull-left">Ajouter</button>
        {% set message = app.user ?  'Retour à la gestion des utilisateur' : 'Retour à la page de connexion' %}
        <a href="{{ path('user_list') }}" class="btn btn-info pull-right">{{ message }}</a>
        {{ form_end(form) }}
    </div>
{% endblock %}
